<div class="container mt-4">
  <div class="card">
    <div class="card-header">
      <h3><%= @chat_room.title %></h3>
    </div>
    <div class="card-body">
      <div id="messages" class="mb-3" style="height: 300px; overflow-y: scroll;" data-chat-room-id="<%= @chat_room.id %>" style="height: 300px; overflow-y: scroll;">
        <% @chat_messages.each do |message| %>
          <%= render partial: 'chat_messages/chat_message', locals: { message: message } %>
        <% end %>
      </div>
      <%= form_with model: ChatMessage.new, local: false do |f| %>
        <%= f.hidden_field :chat_room_id, value: @chat_room.id %>
        <div class="input-group">
          <%= f.text_field :content, class: 'form-control', placeholder: 'Type your message...', required: true %>
          <button type="submit" class="btn btn-primary">Send</button>
        </div>
      <% end %>
    </div>
  </div>
</div>